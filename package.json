{
  "name": "template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./server.js",
    "start:inspect": "cross-env NODE_ENV=production node --inspect ./server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon ./server.js",
    "start:dev-inspect": "cross-env NODE_ENV=development nodemon --inspect ./server.js",
    "lint": "eslint **/*.js --ignore-pattern 'node_modules",
    "lint:fix": "eslint --fix **/*.js",
    "test.jest": "jest",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.0",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "^16.0.3",
    "express": "4.17.1",
    "gravatar": "^1.8.2",
    "http-errors": "^2.0.0",
    "jimp": "^0.16.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.8.0",
    "morgan": "1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^2.1.11",
    "swagger-jsdoc": "6.0.1",
    "swagger-ui-express": "^4.6.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "2.0.15",
    "supertest": "^6.3.3"
  },
  "eslintIgnore": ["node_modules"],
  "lint-staged": {
    "./**/*.js": [
      "eslint --fix"
    ]
  }
}
